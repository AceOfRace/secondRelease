
<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

    <!--Main Content-->

    <main class="container">
      <div class="jumbotron">
        <h1 class="display-4"></h1>
<form class="form" method="POST">
  <div class="form-group row">
    <label for="nameTextField" class="col-sm-2 col-form-label">Tournament Name:</label>
    <div class="col-sm-10">
      <input 
      type="text" 
      class="form-control" 
      id="nameTextField" 
      placeholder=""
      name="name"
       value="<%= game.name %>">
    </div>
  </div>
  <br>
  <fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">Tournament Type:</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="tType" id="type1"  value="<%= game.tType %>">
          <label class="form-check-label" for="type1">
            Single Elimination
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="tType" id="type2" value="<%= game.tType %>">
          <label class="form-check-label" for="type2">
            Double Elimination
          </label>
        </div>
        <div class="form-check disabled">
          <input class="form-check-input" type="radio" name="tType" id="type3" value="<%= game.tType %>">
          <label class="form-check-label" for="type3">
            Round Robin
          </label>
        </div>
      </div>
    </div>
  </fieldset>
  <div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <div class="form-check">
        <input 
        class="form-check-input" 
        type="checkbox" 
        id="gridCheck1"
        name="Included"
        value="<%= game.Included %>"
        >
        <label class="form-check-label" for="gridCheck1">
          Include a match for 3rd place between semifinal losers
        </label>
      </div>
    </div>
  </div>

    <div class="form-group row">
    <label for="participant"class="col-sm-2 col-form-label">Number of Participants:</label>
    <div class="col-sm-10">
    <input 
    type="number" 
    id="participant" 
    name="participant" 
    min="0" max="256"
    value="<%= game.participant %>"
    >
    
    <p>256 max</p>
    </div>
    </div>

    <div class="form-group row">
    <label for="game"class="col-sm-2 col-form-label">Game:</label>
    <div class="col-sm-10">
    <input 
    type="search" 
    id="game" 
    name="game" 
    placeholder="The game or sport being play"
    value="<%= game.game %>">
    </div>
     </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">GENERATE</button>
    </div>
  </div>
</form>
        
      </div>
    </main>


    <%- include ('../partials/bottom_nav.ejs') %>

    <%- include ('../partials/footer.ejs') %>